<h1>Comments#edit</h1>
<p>Find me in app/views/comments/edit.html.erb</p>
<p><%= @msg %></p>
<% if @comment.errors.any? %>
<ul>
	<% @comment.errors.full_comments.each do |err| %>
	<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<table>
	<%= form_for(@comment, url:{controller:'comments', action:'update', id:@comment.id}) do |form| %>
	<tr><th>id</th>
		<td><%= form.text_field :id %></td></tr>
	<tr><th>talker id</th>
		<td><%= form.text_field :talker_id %></td></tr>
	<tr><th>ts</th>
		<td><%= form.text_field :ts %></td></tr>
	</tr>
	<tr><th></th>
			<td><%= form.text_field :kubun %></td></tr>
	</tr>
	<tr><th></th>
			<td><%= form.text_field :comment %></td></tr>
	</tr>
	<tr><th></th>
		<td><%= form.submit "送信" %></td></tr>
	</tr>
	<% end %>
</table>